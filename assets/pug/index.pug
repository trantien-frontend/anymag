include ./mixins/Path.pug



include ./component/Poster.pug
include ./component/Post.pug
include ./component/Travel.pug
include ./component/Lastest.pug
include ./component/Pagination.pug

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title TranTien
        +StyleCss()
        +Path()
    body 
        .wrapper 
            .main
                .row 
                    -let col = ['col-lg-6','col-md-12','col-12']
                    div(class=col)
                        .main-poster
                            include ./layout/head.pug
                            //- Start-poster
                            +poster()
                            //- End-poster
                    div(class=col)
                        //- start-main-content
                        .main-content
                            include ./component/ListIcon.pug
                            include ./component/Slide.pug
                            -let listPost = [{img: './images/post-1.jpg', title: 'What I Wish Everyone Knew About Traveling'}, {img: './images/post-2.jpg', title: 'What I Wish Everyone Knew About Traveling'}, {img: './images/post-3.jpg', title: 'What I Wish Everyone Knew About Traveling'},]
                            +post(listPost)
                            +travel()
                            -let listLastest = [{img:'./images/lastest-page-1.jpg'},{img:'./images/lastest-page-1-2.jpg'},{img:'./images/lastest-page-1-3.jpg'},{img:'./images/lastest-page-1-4.jpg'},{img:'./images/lastest-page-1-5.jpg'},{img: './images/lastest-page-1-6.jpg'},{img: './images/lastest-page-1-7.jpg'},{img: './images/lastest-page-1-8.jpg'},{img: './images/lastest-page-1-9.jpg'},{img:'./images/lastest-page-1-10.jpg'},]
                            +lastestPost(listLastest)
                            +pagination('index.html')
                            include ./layout/footer.pug
                include ./component/widgetsSide.pug
                    //- End-main-content    
        +Script()